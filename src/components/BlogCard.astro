---
import { formatDate } from '@/lib/content';

interface Props {
  post: {
    slug: string;
    title: string;
    description: string;
    date: string;
    image?: string;
    category: string;
    featured: boolean;
  };
  compact?: boolean;
}

const { post, compact = false } = Astro.props;
const { title, description, date, image, category } = post;
---

<article class="group">
  <a href={`/blog/${post.slug}`} class="block">
    {/* Image */}
    {image && !compact && (
      <div class="relative overflow-hidden rounded-xl mb-5 bg-slate-100 dark:bg-slate-800">
        <div class="aspect-[16/10]">
          <img
            src={image}
            alt={title}
            class="w-full h-full object-cover transition-all duration-500 group-hover:scale-[1.02]"
            loading="lazy"
          />
        </div>
      </div>
    )}

    {/* No image placeholder */}
    {!image && !compact && (
      <div class="relative overflow-hidden rounded-xl mb-5 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-800 dark:to-slate-900">
        <div class="aspect-[16/10] flex items-center justify-center">
          <svg class="w-12 h-12 text-slate-300 dark:text-slate-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
        </div>
      </div>
    )}

    {/* Content */}
    <div class={compact ? 'space-y-2' : 'space-y-3'}>
      {/* Category & Date */}
      <div class="flex items-center gap-3">
        <span class="badge-accent">
          {category}
        </span>
        <span class="text-xs text-slate-400 dark:text-slate-500">
          {formatDate(date)}
        </span>
      </div>

      {/* Title */}
      <h3 class:list={[
        'font-semibold text-slate-900 dark:text-white',
        'group-hover:text-accent-600 dark:group-hover:text-accent-400',
        'transition-colors duration-200',
        compact ? 'text-base line-clamp-2' : 'text-lg'
      ]}>
        {title}
      </h3>

      {/* Description */}
      {!compact && (
        <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed line-clamp-2">
          {description}
        </p>
      )}

      {/* Read more link */}
      {!compact && (
        <div class="pt-2">
          <span class="inline-flex items-center text-accent-600 dark:text-accent-400 text-sm font-medium">
            Read article
            <svg class="w-4 h-4 ml-1.5 transition-transform duration-200 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </span>
        </div>
      )}
    </div>
  </a>
</article>
