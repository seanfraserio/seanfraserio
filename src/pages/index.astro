---
export const prerender = true;

import BaseLayout from '@layouts/BaseLayout.astro';
import BlogCard from '@components/BlogCard.astro';
import Newsletter from '@components/Newsletter.astro';
import { getPublishedPosts } from '@/lib/content';

const sortedPosts = await getPublishedPosts();
const featuredPost = sortedPosts.find((post) => post.featured) || sortedPosts[0];
const recentPosts = sortedPosts.filter((post) => post !== featuredPost).slice(0, 6);

// Security topic categories with images
const topics = [
  {
    title: 'Cloud Security',
    description: 'CSPM, CASB, CDR solutions',
    icon: '‚òÅÔ∏è',
    href: '/blog?category=cloud-security'
  },
  {
    title: 'Network Security',
    description: 'ZTNA, SASE, SD-WAN',
    icon: 'üîí',
    href: '/blog?category=network-security'
  },
  {
    title: 'Threat Detection',
    description: 'SIEM, SOAR, XDR tools',
    icon: 'üõ°Ô∏è',
    href: '/blog?category=security-operations'
  },
  {
    title: 'DevSecOps',
    description: 'IaC, CI/CD, automation',
    icon: '‚öôÔ∏è',
    href: '/blog?category=devops'
  }
];
---

<BaseLayout title="Cloud Network & Security Blog">
  <!-- Hero Section with Background Image -->
  <section class="relative min-h-[600px] flex items-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1558494949-ef010cbdcc31?auto=format&fit=crop&w=2000&q=80"
        alt="Data center with blue lighting"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-slate-900/95 via-slate-900/80 to-slate-900/60" />
      <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-transparent to-transparent" />
    </div>

    <!-- Animated Grid Overlay -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-[linear-gradient(rgba(59,130,246,0.1)_1px,transparent_1px),linear-gradient(90deg,rgba(59,130,246,0.1)_1px,transparent_1px)] bg-[size:50px_50px]" />
    </div>

    <div class="container-wide relative z-10 py-20 md:py-28">
      <div class="max-w-4xl">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary-500/20 text-primary-300 text-sm font-medium mb-6 backdrop-blur-sm border border-primary-500/30">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-primary-500"></span>
          </span>
          Welcome to Cloud Hacks
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight text-white">
          A Cloud Network &
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-400 via-blue-400 to-cyan-400"> Security Blog</span>
        </h1>

        <p class="mt-6 text-lg md:text-xl text-slate-300 max-w-3xl leading-relaxed">
          Welcome to my Blog! My passion lies in dissecting complex technologies for professionals and enthusiasts, bridging the gap between complex technical concepts and practical, actionable solutions. This blog serves as a platform to share my insights, experiences, and the occasional epiphany to elevate our collective understanding and application of cloud security principles!
        </p>

        <div class="mt-10 flex flex-wrap gap-4">
          <a href="/blog" class="group inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-primary-500 text-white font-semibold hover:bg-primary-600 transition-all shadow-lg shadow-primary-500/25 hover:shadow-primary-500/40">
            Explore Articles
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a href="/about" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-white/10 text-white font-semibold hover:bg-white/20 transition-all backdrop-blur-sm border border-white/20">
            About Me
          </a>
        </div>
      </div>
    </div>

    <!-- Decorative Elements -->
    <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-slate-50 dark:from-slate-900 to-transparent" />
  </section>

  <!-- Topics Grid -->
  <section class="container-wide py-16 -mt-16 relative z-20">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {topics.map((topic) => (
        <a href={topic.href} class="group p-6 rounded-xl bg-white dark:bg-slate-800 shadow-lg hover:shadow-xl transition-all border border-slate-200 dark:border-slate-700 hover:border-primary-300 dark:hover:border-primary-600">
          <span class="text-3xl mb-3 block">{topic.icon}</span>
          <h3 class="font-semibold text-slate-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">{topic.title}</h3>
          <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">{topic.description}</p>
        </a>
      ))}
    </div>
  </section>

  <!-- Featured Post -->
  {featuredPost && (
    <section class="container-wide py-12">
      <div class="flex items-center justify-between mb-8">
        <div class="flex items-center gap-3">
          <div class="w-1 h-8 bg-gradient-to-b from-primary-500 to-accent-500 rounded-full" />
          <h2 class="text-2xl font-bold text-slate-900 dark:text-white">Featured Article</h2>
        </div>
        <span class="px-3 py-1 rounded-full bg-accent-100 dark:bg-accent-900/30 text-accent-700 dark:text-accent-300 text-sm font-medium">Latest</span>
      </div>
      <BlogCard post={featuredPost} featured={true} />
    </section>
  )}

  <!-- Security Insights Section with Image -->
  <section class="py-16 bg-slate-100 dark:bg-slate-800/30">
    <div class="container-wide">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-6">
            Practical Security Insights
          </h2>
          <p class="text-slate-600 dark:text-slate-300 mb-6 leading-relaxed">
            From cloud-native security architectures to zero-trust implementations,
            explore in-depth guides that help you protect your infrastructure against
            modern threats.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-slate-700 dark:text-slate-300">Cloud security posture management (CSPM)</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-slate-700 dark:text-slate-300">Zero trust network access (ZTNA) solutions</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-slate-700 dark:text-slate-300">Extended detection and response (XDR)</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-slate-700 dark:text-slate-300">Security orchestration & automation (SOAR)</span>
            </li>
          </ul>
        </div>
        <div class="relative">
          <img
            src="https://images.unsplash.com/photo-1563986768609-322da13575f3?auto=format&fit=crop&w=800&q=80"
            alt="Cybersecurity concept with lock and circuit board"
            class="rounded-2xl shadow-2xl"
          />
          <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-primary-500/20 rounded-full blur-3xl" />
          <div class="absolute -top-6 -right-6 w-24 h-24 bg-accent-500/20 rounded-full blur-3xl" />
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Posts -->
  {recentPosts.length > 0 && (
    <section class="container-wide py-16">
      <div class="flex items-center justify-between mb-8">
        <div class="flex items-center gap-3">
          <div class="w-1 h-8 bg-gradient-to-b from-primary-500 to-accent-500 rounded-full" />
          <h2 class="text-2xl font-bold text-slate-900 dark:text-white">Recent Articles</h2>
        </div>
        <a href="/blog" class="inline-flex items-center gap-1 text-primary-600 dark:text-primary-400 hover:underline font-medium">
          View all
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {recentPosts.map((post) => (
          <BlogCard post={post} />
        ))}
      </div>
    </section>
  )}

  <!-- Stats Section -->
  <section class="py-16 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white relative overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <img
        src="https://images.unsplash.com/photo-1526374965328-7f61d4dc18c5?auto=format&fit=crop&w=2000&q=80"
        alt="Matrix code background"
        class="w-full h-full object-cover"
      />
    </div>
    <div class="absolute inset-0 bg-slate-900/80" />
    <div class="container-wide relative z-10">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Empowering Security Professionals</h2>
        <p class="text-slate-400 max-w-2xl mx-auto">Comprehensive coverage of cloud security topics to help you stay ahead of threats</p>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold text-primary-400 mb-2">35+</div>
          <div class="text-slate-400">Articles</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold text-primary-400 mb-2">10+</div>
          <div class="text-slate-400">Topics</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold text-primary-400 mb-2">100%</div>
          <div class="text-slate-400">Free Content</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold text-primary-400 mb-2">24/7</div>
          <div class="text-slate-400">Available</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-16">
    <div class="container-narrow">
      <Newsletter />
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
</style>
