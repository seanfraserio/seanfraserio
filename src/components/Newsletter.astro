---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Subscribe to CloudHacks',
  description = 'Get the latest articles on cloud security and best practices delivered to your inbox.',
} = Astro.props;
---

<div class="text-center">
  <h3 class="text-2xl font-bold text-slate-900 dark:text-white">
    {title}
  </h3>
  <p class="mt-2 text-slate-600 dark:text-slate-400 max-w-md mx-auto">
    {description}
  </p>

  <form id="newsletter-form" class="mt-6 flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
    <input
      type="email"
      name="email"
      placeholder="you@example.com"
      required
      class="input flex-1"
      aria-label="Email address"
    />
    <button type="submit" class="btn-primary whitespace-nowrap">
      <span id="submit-text">Subscribe</span>
      <svg id="submit-loading" class="hidden w-5 h-5 animate-spin" viewBox="0 0 24 24" fill="none">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </button>
  </form>

  <div id="newsletter-message" class="mt-4 hidden">
    <p id="success-message" class="hidden text-accent-600 dark:text-accent-400">
      Thanks for subscribing! Check your email to confirm.
    </p>
    <p id="error-message" class="hidden text-red-600 dark:text-red-400">
      Something went wrong. Please try again.
    </p>
  </div>

  <p class="mt-4 text-xs text-slate-500 dark:text-slate-400">
    No spam, unsubscribe anytime.
  </p>
</div>

<script>
  const form = document.getElementById('newsletter-form') as HTMLFormElement;
  const submitText = document.getElementById('submit-text');
  const submitLoading = document.getElementById('submit-loading');
  const messageContainer = document.getElementById('newsletter-message');
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Show loading state
    submitText?.classList.add('hidden');
    submitLoading?.classList.remove('hidden');
    messageContainer?.classList.add('hidden');
    successMessage?.classList.add('hidden');
    errorMessage?.classList.add('hidden');

    const formData = new FormData(form);
    const email = formData.get('email');

    try {
      // Replace with your actual newsletter API endpoint
      // For now, simulate a successful submission
      await new Promise((resolve) => setTimeout(resolve, 1000));

      // Show success
      messageContainer?.classList.remove('hidden');
      successMessage?.classList.remove('hidden');
      form.reset();
    } catch {
      // Show error
      messageContainer?.classList.remove('hidden');
      errorMessage?.classList.remove('hidden');
    } finally {
      // Reset button
      submitText?.classList.remove('hidden');
      submitLoading?.classList.add('hidden');
    }
  });
</script>
